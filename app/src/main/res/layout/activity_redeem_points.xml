<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RedeemPoints">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="-1dp"
        android:layout_gravity="center"
        android:text="WELCOME"
        android:textSize="40sp"
        android:fontFamily="serif-monospace"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Redeem Your Points"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/availableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:text="Available Share"
                android:textSize="17dp"
                android:padding="10dp"
                android:gravity="left" />
            <TextView
                android:id="@+id/availableAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="000"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:text="Total Share"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:gravity="left" />
            <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="000"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:gravity="right" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/percentageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:text="Percentage of PROFIT"
                android:textSize="17dp"
                android:visibility="invisible"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:gravity="left" />
            <TextView
                android:id="@+id/percentageAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="000"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:gravity="right" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"

            android:padding="20dp">
            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.0"
                android:hint="A M O U N T"
                android:padding="20dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/buyButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="2.0"

                android:background="@drawable/blackbutton"
                android:text="BUY" />
        </LinearLayout>






    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        app:cardCornerRadius="80dp"
        android:layout_gravity="center"
        android:layout_margin="44dp">

        <ImageView
            android:id="@+id/shareDetailsImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/redeem1" />

    </androidx.cardview.widget.CardView>


</LinearLayout>