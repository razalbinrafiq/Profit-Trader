<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails">


    <androidx.cardview.widget.CardView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        app:cardCornerRadius="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageProfile"
            android:src="@drawable/profile1">

        </ImageView>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/imageView"
        android:fontFamily="@font/alegreya_sans_medium"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="32dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/RLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="40dp"
        android:layout_below="@+id/nameTextView"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EmailID"
            android:id="@+id/email1"
            android:paddingTop="52dp"
            android:textSize="22dp">


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EmailID"
            android:paddingTop="52dp"
            android:id="@+id/emailIDTextView"
            android:textColor="@color/black"
            android:layout_alignRight="@id/email1"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textSize="22dp">


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:paddingTop="22dp"
            android:id="@+id/phone1"
            android:layout_below="@id/email1"
            android:textSize="22dp">


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:id="@+id/phoneTextView"
            android:textColor="@color/black"
            android:layout_below="@id/email1"
            android:layout_alignRight="@id/phone1"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textSize="22dp"
            android:paddingTop="22dp">


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:id="@+id/password1"
            android:paddingTop="22dp"
            android:layout_below="@id/phoneTextView"
            android:textSize="22dp">

        </TextView>

        <TextView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTextView"
            android:layout_alignRight="@id/password1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:paddingTop="22dp"
            android:text="*********"
            android:textColor="@color/black"
            android:textSize="22dp">

        </TextView>

    </RelativeLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proudly Made In India"
        android:id="@+id/ProudlyMadeInIndia"
        android:paddingTop="5dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textColor="@color/black"
        android:layout_above="@id/bottom_navigation"
        android:layout_centerHorizontal="true"
        android:textSize="22dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.10.2"
        android:id="@+id/Version"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:layout_above="@id/ProudlyMadeInIndia"
        android:layout_centerHorizontal="true"
        android:textSize="22dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFIT TRADER"
        android:id="@+id/ProfitTrader"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:layout_above="@id/Version"
        android:layout_centerHorizontal="true"
        android:textSize="22dp">
    </TextView>



    <androidx.cardview.widget.CardView

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        app:cardCornerRadius="60dp"
        android:layout_above="@id/ProfitTrader"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageProfile2"
            android:src="@drawable/profile2">

        </ImageView>

    </androidx.cardview.widget.CardView>




</RelativeLayout>