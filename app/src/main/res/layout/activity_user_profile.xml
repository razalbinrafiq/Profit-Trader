<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <androidx.cardview.widget.CardView

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        app:cardCornerRadius="60dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageProfile"
            android:src="@drawable/profiledp">

        </ImageView>

    </androidx.cardview.widget.CardView>



    <TextView
        android:paddingTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/imageView"
        android:textColor="@color/black"
        android:id="@+id/nameTextView"
        android:layout_centerHorizontal="true"
        android:textSize="32dp">

    </TextView>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_below="@+id/nameTextView"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmailID"
        android:id="@+id/email1"
        android:paddingTop="52dp"
        android:textSize="22dp">


    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmailID"
        android:id="@+id/emailIDTextView"
        android:textColor="@color/black"
        android:paddingLeft="32dp"
        android:layout_below="@id/email1"
        android:textSize="22dp">


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:paddingTop="22dp"
        android:id="@+id/phone1"
        android:layout_below="@id/emailIDTextView"
        android:textSize="22dp">


    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/phoneTextView"
        android:textColor="@color/black"
        android:paddingLeft="32dp"
        android:layout_below="@id/phone1"
        android:textSize="22dp">


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/password1"
        android:paddingTop="22dp"
        android:layout_below="@id/phoneTextView"
        android:textSize="22dp">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Password"
        android:id="@+id/editPasswordButton"
        android:layout_alignParentRight="true"
        android:layout_below="@id/password1"
        android:textSize="22dp">


    </Button>
</RelativeLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>